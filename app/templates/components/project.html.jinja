{% extends "components/section.html.jinja" %}
{% block title %}
    {{ project.title }}
    <span>
        <a target="_blank" rel="noopener noreferrer" href="{{ project.git }}" onclick="{{ ga('Social Media', project.git)|safe }}">
            <img class="github-image" alt="github-image" src="githubLight.png" />
        </a>
    </span>
{% endblock %}

{% block content %}
    {% if project.image %}
    <div class="project-image">
        <a style="border-bottom: none" target="_blank" rel="noopener noreferrer" href="{{ project.git }}" onclick="{{ ga('Social Media', project.git)|safe }}"><img alt="project-image" src="{{ project.image }}"></a>
    </div>
    {% endif %}
    <div>
        {{ project["description"] }}
    </div>
{% endblock %}
